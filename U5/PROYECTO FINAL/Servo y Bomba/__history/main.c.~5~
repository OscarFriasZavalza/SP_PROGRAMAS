#include <16F84A.h>
#fuses XT, NOWDT
#use delay(clock = 4000000)


#use standard_io(B)
#use fast_io(A)

#define use_servo_1           // Utiliza el servo 1
#define servo_1 PIN_B0        // Pin del servo 1
#include <servo_st.c>         // Libreria para el manejo de servomotores

void main(){
servo_init(); 
                // Inicializa el servo
  
   while(true)
 {
      
      
   
      servo_1_write(30);       // 0°
       delay_ms(100);
      
      servo_1_write(90);      // 90°
      delay_ms(100);

    
      servo_1_write(150);     // 180°
       delay_ms(100);

   
   }
}
